############
# CRITICAL: Shell integration (DO NOT DISABLE)
############
shell /bin/zsh
shell_integration enabled
# editor /usr/bin/nvim

############
# Rendering
############
adjust_line_height 1
adjust_column_width 0
adjust_baseline 1
sync_to_monitor yes
repaint_delay 5
input_delay 0

############
# Fonts
############
font_family      family=Monaco postscript_name=Monaco
# font_family      family="SF Mono Terminal"
# font_family      family="CaskaydiaCove Nerd Font"
font_size 14
# bold_font        auto
# italic_font      auto
# bold_italic_font auto
disable_ligatures never
macos_thicken_font 0.1
symbol_map U+E000-U+F1AF0 JetBrainsMonoNL Nerd Font

############
# Cursor
############
cursor_shape underline
cursor_underline_thickness 2.0
cursor_blink_interval -1

############
# Scrollback
############
scrollback_lines 5000
wheel_scroll_multiplier 6.0
touch_scroll_multiplier 3.0

############
# URLs & Selection
############
detect_urls yes
copy_on_select yes

############
# Window & Layouts
############
enabled_layouts splits
initial_window_width 135c
initial_window_height 40c
draw_minimal_borders yes
window_border_width 1.5pt
placement_strategy center

############
# Tabs
############
tab_bar_edge bottom
tab_bar_style powerline

############
# Background
############
background_blur 20
background_opacity 0.92
dynamic_background_opacity yes

############
# macOS Behavior
############
macos_option_as_alt no
macos_traditional_fullscreen no
macos_show_window_title_in all

############
# Keybindings
############
kitty_mod ctrl+shift

# New tab (SAME DIR — FIXED)
map kitty_mod+t launch --type=tab --cwd=current

# New OS window (SAME DIR — FIXED)
map kitty_mod+n launch --type=os-window --cwd=current

# Vertical split (WORKS)
map kitty_mod+enter launch --location=vsplit --cwd=current

# Horizontal split (WORKS — NO SHIFT, NO macOS conflict)
map kitty_mod+alt+enter launch --location=hsplit --cwd=current

# Close window
map kitty_mod+w close_window

# Reload config
map kitty_mod+f5 load_config_file

############
# Theme
############
include ./Catppuccin-Mocha-Adwaita.conf
