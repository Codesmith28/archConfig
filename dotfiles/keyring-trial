/etc/pam.d/login:
auth       requisite    pam_nologin.so
auth       include      system-local-login
auth 	  optional	pam_gnome_keyring.so
account    include      system-local-login
session    include      system-local-login
session	  optional 	pam_gnome_keyring.so auto_start
password   include      system-local-login

/etc/pam.d/passwd:
password	optional	pam_gnome_keyring.so

/usr/lib/seahorse/ssh-askpass {my_key}
/usr/lib/seahorse/ssh-askpass ~/.ssh/id_rsa
ssh-add ~/.ssh/id_rsa

in hyprland.conf:
exec-once=dbus-update-activation-environment --all

in /usr/share/xdg-desktop-portal/portals/gnome-keyring.portal:
[portal]
DBusName=org.freedesktop.secrets
Interfaces=org.freedesktop.impl.portal.Secret
UseIn=gnome;hyprland

in hypr/conf/autostart:
exec = /usr/bin/gnome-keyring-daemon --start --components=secrets,ssh

git config --global credential.helper /usr/lib/git-core/git-credential-libsecret
